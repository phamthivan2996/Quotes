<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:id="@+id/addAdv">
    <android.support.design.widget.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clickable="true"
        android:id="@+id/btNavViewMain"
        android:layout_weight="1"
        app:menu="@menu/menu_choosions"
        android:background="#f5d699"
        app:itemTextColor="@color/item_colors"
        app:itemIconTint="@color/item_colors"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/LinearForFragment"
        android:orientation="vertical"
        android:layout_weight="8"
        android:background="#635b22"/>

</LinearLayout>
