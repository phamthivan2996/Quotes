<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5C96D"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_contains"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F5C96D"
        android:gravity="center"
        android:minHeight="300dp"
        android:paddingTop="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layout_contains_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tvSentence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="#1a0f01"
                    android:textSize="14sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/tvVietnamese"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvSentence"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:textColor="#1a0f01"
                    android:textSize="14sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/tvAuthorQT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/tvVietnamese"
                    android:layout_below="@+id/tvVietnamese"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="25dp"
                    android:textColor="#1a0f01"
                    android:textSize="12sp"
                    android:textStyle="italic" />
            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/quotes" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/icMoreLike"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:clickable="true"
            android:src="@drawable/love_icon" />

        <ImageView
            android:id="@+id/icMoreShare"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="39dp"
            android:clickable="true"
            android:src="@drawable/no_share" />
        <ImageView
            android:id="@+id/icFacebook"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="39dp"
            android:clickable="true"
            android:src="@drawable/ic_facbook" />
    </LinearLayout>
</LinearLayout>